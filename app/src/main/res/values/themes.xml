<resources>
    <!-- Base application theme. -->
    <style name="Theme.ViewPagerBottomSheetApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- disable actionbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- set activity_drag_and_drop colors -->
        <item name="colorPrimary">@color/active_2</item>
        <item name="colorPrimaryDark">@color/active_1</item>
        <item name="colorAccent">@color/active_2</item>

        <!-- basic colours -->
        <item name="android:windowBackground">@color/neutral_7</item>
        <item name="android:textColor">@color/neutral_1</item>
        <item name="android:textColorHint">@color/neutral_5</item>
        <item name="android:divider">@color/neutral_7</item>
        <item name="android:colorBackground">@color/neutral_7</item>
    </style>
</resources>